{
  "manifest_version": 3,
  "name": "Voxel AI Assistant",
  "version": "1.0",
  "description": "Voice-controlled AI assistant for webpage interaction",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "tts"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "lib/tensorflow.min.js",
      "lib/yolo.min.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "src/utils/storage.js",
      "src/utils/api.js",
      "src/utils/yoloProcessor.js",
      "src/content/voiceAssistant.js",
      "src/content/content.js"
    ],
    "run_at": "document_idle"
  }]
}