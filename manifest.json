{
  "manifest_version": 3,
  "name": "Voxel",
  "version": "1.0",
  "description": "An AI-powered assistant for visually impaired users to understand web content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tts",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' blob:"
  },
  "web_accessible_resources": [{
    "resources": ["src/*"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "start-reading": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Start reading page"
    },
    "pause-reading": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Pause reading"
    }
  }
} 